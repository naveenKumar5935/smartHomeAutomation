<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartHomeAutomation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_700</item>
        <item name="colorPrimaryVariant">@color/dark_blue_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_700</item>
        <item name="colorSecondaryVariant">@color/light_blue_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@drawable/screen_background_dark</item>
    </style>

    <style name="SplashBackground">
        <item name="android:startColor">@color/light_grey</item>
    </style>
</resources>