<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartHomeAutomation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_700</item>
        <item name="colorPrimaryVariant">@color/dark_blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_700</item>
        <item name="colorSecondaryVariant">@color/light_blue_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ButtonText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/ripple</item>
    </style>
    
    <style name="SwitchColour" >
        <item name="colorControlActivated">@color/green_200</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@drawable/screen_background</item>
    </style>

    <style name="Theme.SmartHomeAutomation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmartHomeAutomation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartHomeAutomation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>