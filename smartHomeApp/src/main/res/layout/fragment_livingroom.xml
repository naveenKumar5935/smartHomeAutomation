<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.livingroom.LivingRoomFragment"
    android:padding="10dp">

    <TextView
        android:id="@+id/bedroom_data_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="@string/living_room_sensor_readings"
        android:textStyle="bold"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/bedroom_data_title"/>

    <TextView
        android:id="@+id/living_room_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_line"
        android:gravity="left"
        android:lineSpacingMultiplier="2"
        android:padding="10dp"
        android:textSize="15sp" />
    <Switch
        android:id="@+id/door_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Door"
        android:textSize="21sp"
        android:layout_above="@+id/RFID_switch"
        android:layout_marginTop="40dp"/>
    <Switch
        android:id="@+id/RFID_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RFID Lock"
        android:textSize="21sp"
        android:layout_above="@+id/motion_switch"
        android:layout_marginTop="40dp"/>
    <Switch
        android:id="@+id/motion_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motion Detector"
        android:textSize="21sp"
        android:layout_above="@+id/light_switch"
        android:layout_marginTop="40dp"/>
    <Switch
        android:id="@+id/light_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lights"
        android:textSize="21sp"
        android:layout_above="@+id/slider_title"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/slider_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slider"
        android:text="Colour Value"
        android:gravity="left"
        android:textSize="17sp"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelBehavior="withinBounds"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>