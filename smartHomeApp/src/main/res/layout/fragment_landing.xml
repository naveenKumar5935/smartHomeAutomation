<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ui.landing.LandingFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/landing_layout">


    <ImageView
        android:layout_width="171dp"
        android:layout_height="159dp"
        android:src="@drawable/splash"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/top_button_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/button_kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="150dp"
            android:text="@string/kitchen" />

        <Button
            android:id="@+id/button_bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="150dp"
            android:text="@string/bedroom" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_button_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center"
        android:layout_below="@id/top_button_row">
        <Button
            android:id="@+id/button_living_room"
            android:text="@string/living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:height="150dp"
            android:width="150dp"/>
        <Button
            android:id="@+id/button_settings"
            android:text="@string/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:height="150dp"
            android:width="150dp"/>
    </LinearLayout>

</RelativeLayout>