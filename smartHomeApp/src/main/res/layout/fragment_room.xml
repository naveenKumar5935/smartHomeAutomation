<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RoomFragment"
    android:padding="@dimen/fragment_padding"
    style="@style/ScreenBackground"
    android:theme="@style/SwitchColour">

    <TextView
        android:id="@+id/room_data_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="@dimen/fragment_title_text_size"
        android:padding="@dimen/fragment_title_padding"
        android:textStyle="bold"
        android:shadowColor="@color/white"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="10"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/black"
        android:layout_below="@+id/room_data_title"/>

    <TextView
        android:id="@+id/room_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_line"
        android:gravity="left"
        android:lineSpacingMultiplier="1.5"
        android:padding="@dimen/data_padding"
        android:textSize="@dimen/data_text_size"
        android:scrollbars="vertical"
        android:background="@color/white"
        android:alpha="0.65"
        android:layout_margin="10dp"
        android:maxHeight="400dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/controls"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
    </LinearLayout>


</RelativeLayout>



