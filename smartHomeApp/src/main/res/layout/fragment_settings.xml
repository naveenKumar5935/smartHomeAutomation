<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingFragLayout"
    tools:context=".ui.settings.SettingsFragment"
    style="@style/ScreenBackground">


    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/settingLogoutBtn"
        android:layout_width="@dimen/settings_button_width"
        android:layout_height="@dimen/settings_button_height"
        android:layout_marginTop="@dimen/settings_margin_top"
        android:text="@string/setting_button_txt"
        android:textSize="@dimen/button_text_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ButtonText"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settingfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:contentDescription="@string/submit"
        android:src="@drawable/ic_baseline_wifi_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accessCardButton"
        android:layout_width="@dimen/settings_button_width"
        android:layout_height="@dimen/settings_button_height"
        android:layout_marginTop="@dimen/settings_button_marginTop"
        android:text="@string/manage_access_card"
        android:textSize="@dimen/button_text_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingLogoutBtn"
        style="@style/ButtonText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chooseBackgroundBtn"
        android:layout_width="@dimen/settings_button_width"
        android:layout_height="@dimen/settings_button_height"
        android:layout_marginTop="@dimen/settings_button_marginTop"
        android:text="@string/choose_image"
        android:textSize="@dimen/button_text_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accessCardButton"
        style="@style/ButtonText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manageRooms"
        android:layout_width="@dimen/settings_button_width"
        android:layout_height="@dimen/settings_button_height"
        android:layout_marginTop="@dimen/settings_button_marginTop"
        android:text="Manage Rooms"
        android:textSize="@dimen/button_text_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseBackgroundBtn"
        style="@style/ButtonText"/>

    <Switch
        android:id="@+id/orientationSwitch"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="110dp"
        android:text="@string/setting_switch_mode"
        android:textSize="21sp"
        android:theme="@style/SwitchColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseBackgroundBtn" />

    <Switch
        android:id="@+id/darkModeSwitch"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="@string/dark_mode"
        android:textSize="21sp"
        android:theme="@style/SwitchColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orientationSwitch" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settingProfileImg"
        android:layout_width="165dp"
        android:layout_height="157dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/darkModeSwitch" />


</androidx.constraintlayout.widget.ConstraintLayout>
