<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.livingroom.LivingRoomFragment"
    android:padding="10dp"
    style="@style/ScreenBackground">

    <Switch
        android:id="@+id/light_switch"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="144dp"
        android:textSize="21sp"
        android:theme="@style/SwitchColour" />

    <Switch
        android:id="@+id/motion_switch"
        android:layout_width="99dp"
        android:layout_height="41dp"
        android:layout_above="@+id/light_switch"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="20dp"
        android:textSize="21sp"
        android:theme="@style/SwitchColour" />

    <TextView
        android:id="@+id/bedroom_data_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="@string/living_room_sensor_readings"
        android:textStyle="bold"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/bedroom_data_title"/>

    <TextView
        android:id="@+id/living_room_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_line"
        android:gravity="left"
        android:lineSpacingMultiplier="2"
        android:padding="10dp"
        android:textSize="15sp" />

    <Switch
        android:id="@+id/door_switch"
        android:layout_width="112dp"
        android:layout_height="51dp"
        android:layout_above="@+id/RFID_switch"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="16dp"
        android:textSize="21sp"
        android:theme="@style/SwitchColour" />

    <Switch
        android:id="@+id/RFID_switch"
        android:layout_width="116dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="144dp"
        android:textSize="21sp"
        android:theme="@style/SwitchColour" />

    <TextView
        android:id="@+id/slider_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slider"
        android:text="@string/colour_value_livingroom"
        android:gravity="left"
        android:textSize="17sp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="722dp"
        android:layout_height="89dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:labelBehavior="withinBounds" />

    <ImageView
        android:id="@+id/door_icon"
        android:layout_width="69dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="189dp"
        android:layout_toStartOf="@+id/door_switch"
        android:src="@drawable/door_closed_nobg" />

    <ImageView
        android:id="@+id/rfid_icon"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="136dp"
        android:layout_toStartOf="@+id/RFID_switch"
        android:src="@drawable/rfid_nobg" />

    <ImageView
        android:id="@+id/motion_icon"
        android:layout_width="69dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="189dp"
        android:layout_toStartOf="@+id/motion_switch"
        android:src="@drawable/motion_detection_nobg" />

    <ImageView
        android:id="@+id/light_icon"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="133dp"
        android:layout_toStartOf="@+id/light_switch"
        android:src="@drawable/lights_off_nobg" />
</RelativeLayout>