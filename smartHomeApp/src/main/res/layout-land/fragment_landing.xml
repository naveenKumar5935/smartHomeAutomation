<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ui.landing.LandingFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/landing_layout">

    <LinearLayout
        android:id="@+id/top_button_row"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/button_kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="150dp"
            android:text="@string/kitchen" />

        <Button
            android:id="@+id/button_bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="150dp"
            android:text="@string/bedroom" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_button_row"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/top_button_row"
        android:layout_marginTop="-38dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/button_living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="150dp"
            android:text="@string/living_room" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:width="150dp"
            android:height="150dp"
            android:text="@string/settings" />
    </LinearLayout>
</RelativeLayout>